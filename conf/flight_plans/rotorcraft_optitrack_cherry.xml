<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="1.5" ground_alt="0" lat0="51.9906325" lon0="4.3767988" max_dist_from_home="15" name="Rotorcraft Basic (Enac)" security_height="0.5">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="TD" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="0.0"/>
    <waypoint name="STDBY" x="0.0" y="0.0"/>
    <waypoint name="FLEX2" x="1.0" y="1.0"/>
    <waypoint lat="51.9906351" lon="4.3767736" name="FLEX"/>
    <waypoint lat="51.990624" lon="4.376771" name="p1"/>
    <waypoint lat="51.990643" lon="4.376821" name="p2"/>
    <waypoint lat="51.990646" lon="4.376724" name="FA1"/>
    <waypoint lat="51.990677" lon="4.376812" name="FA2"/>
    <waypoint lat="51.990624" lon="4.376867" name="FA3"/>
    <waypoint lat="51.990593" lon="4.376779" name="FA4"/>
    <waypoint lat="51.9906253" lon="4.3768574" name="FZ3"/>
    <waypoint lat="51.9905993" lon="4.3767808" name="FZ4"/>
    <waypoint lat="51.9906445" lon="4.3767337" name="FZ1"/>
    <waypoint lat="51.9906707" lon="4.3768103" name="FZ2"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>
    <sector color="blue" name="Flight_Zone">
      <corner name="FZ2"/>
      <corner name="FZ3"/>
      <corner name="FZ4"/>
      <corner name="FZ1"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetWaypointHere(WP_HOME)"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
      <deroute block="Takeoff"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="0.5" vmode="climb" wp="CLIMB"/>
    </block>

    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay until="stage_time>3" wp="STDBY"/>
      <stay wp="p1"/>
    </block>

    <block name="1" pre_call="avoid_detection1()">
      <call fun="nav_set_heading_towards_waypoint(WP_p2)"/>
      <stay until="stage_time>4" wp="p1"/>
      <exception cond="valueofdetection1 == 1" deroute="1b"/>
      <stay until="stage_time>7" wp="p2"/>
      <deroute block="2"/>
    </block>

    <block name="2" pre_call="avoid_detection1()">
      <call fun="nav_set_heading_towards_waypoint(WP_p1)"/>
      <stay until="stage_time>4" wp="p2"/>
      <exception cond="valueofdetection1 == 1" deroute="turn 2"/>
      <stay until="stage_time>7" wp="p1"/>
      <deroute block="1"/>
    </block>

    <block name="1b">
      <call fun="safe_warning1()"/>
      <call fun="avoid_navigation1(WP_FLEX2,30)"/>
      <call fun="avoid_detection1()"/>
      <!--exception cond="valueofdetection1 == 1" deroute="1bb"/-->
      <stay until="stage_time>3"wp="FLEX2"/>
      <deroute block="1c"/>
    </block>

    <!--block name="1bb">
      <call fun="safe_warning1()"/>
      <call fun="avoid_navigation1(WP_FLEX2,30)"/>
      <call fun="avoid_detection1()"/>
      <exception cond="valueofdetection1 == 1" deroute="1bbb"/>
      <stay until="stage_time>3"wp="FLEX2"/>
      <deroute block="1c"/>
    </block>

    <block name="1bbb">
      <call fun="safe_warning1()"/>
      <call fun="avoid_navigation1(WP_FLEX2,30)"/>
      <stay until="stage_time>3"wp="FLEX2"/>
      <deroute block="1c"/>
    </block-->

    <block name="1c">
      <call fun="nav_set_heading_towards_waypoint(WP_p2)"/>
      <stay until="stage_time>7" wp="p2"/>
      <deroute block="2"/>
    </block>

    <block name="mission to 2" pre_call="avoid_detection1()">
      <call fun="nav_set_heading_towards_waypoint(WP_p2)"/>
      <stay until="stage_time>5" wp="p1"/>
      <exception cond="valueofdetection1 == 1" deroute="turn 2"/>
      <stay until="stage_time>5" wp="p2"/>
      <deroute block="mission to 1"/>
    </block>

    <block name="mission to 1" pre_call="avoid_detection1()">
      <call fun="nav_set_heading_towards_waypoint(WP_p1)"/>
      <stay until="stage_time>5" wp="p2"/>
      <exception cond="valueofdetection1 == 1" deroute="turn 1"/>
      <stay until="stage_time>5" wp="p1"/>
      <deroute block="mission to 2"/>
    </block>

    <block name="turn 2">
      <call fun="avoid_navigation1(WP_FLEX2,30)"/>
      <call fun="safe_warning1()"/>
      <call fun="avoid_detection1()"/>
      <exception cond="valueofdetection1 == 1" deroute="turn 2"/>
      <stay until="stage_time>5"wp="FLEX2"/>
      <deroute block="maintain 2"/>
    </block>

    <block name="turn 1">
      <call fun="avoid_navigation1(WP_FLEX2,30)"/>
      <call fun="safe_warning1()"/>
      <stay until="stage_time>5"wp="FLEX2"/>
      <call fun="avoid_detection1()"/>
      <exception cond="valueofdetection1 == 1" deroute="turn 1"/>
      <deroute block="maintain 1"/>
    </block>

    <block name="maintain 2" pre_call="avoid_detection1()">
      <exception cond="valueofdetection1 == 1" deroute="turn 2"/>
      <call fun="nav_set_heading_towards_waypoint(WP_p2)"/>
      <stay until="stage_time>5" wp="p2"/>
      <deroute block="mission to 1"/>
    </block>

    <block name="maintain 1" pre_call="avoid_detection1()">
      <exception cond="valueofdetection1 == 1" deroute="turn 1"/>
      <call fun="nav_set_heading_towards_waypoint(WP_p1)"/>
      <stay until="stage_time>5" wp="p1"/>
      <deroute block="mission to 2"/>
    </block>

    <!--block name="init">
      <call fun="nav_set_heading_towards_waypoint(WP_p1)"/>
      <stay until="stage_time>5" wp="p1"/>
      <deroute block="1 to 2"/>
    </block>
    <block name="1 to 2" pre_call="avoid_detection1()">
      <call fun="nav_set_heading_towards_waypoint(WP_p2)"/>
      <stay until="stage_time>10" wp="p2"/>
      <exception cond="valueofdetection1 == 1" deroute="avoid 1 to 2"/>
    </block>
    <block name="avoid 1 to 2">
      <call fun="avoid_navigation1()"/>
      <exception cond="valueofnavigation1 == 0" deroute="avoidavoid"/>
    </block>
    <block name="avoidavoid">
      <call fun="nav_set_heading_deg(30)"/>
      <call fun="avoid_detection1()"/>
    </block>

    <block name="1">
      <call fun="nav_set_heading_towards_waypoint(WP_p1)"/>
      <stay wp="p1"/>
    </block>
    <block name="2">
      <call fun="nav_set_heading_towards_waypoint(WP_p2)"/>
      <stay wp="p2"/>
    </block-->
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
